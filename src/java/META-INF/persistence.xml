<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" 
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence 
	http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="frameworks">
            <properties>
                
                <!--CONEXÃO JDBC -->
                <property name="javax.percistence.jdbc.driver" 
                          value="com.mysql.jdbc.Driver"/>
                <property name="javax.percistence.jdbc.url" 
                          value="jdbc:mysql://localhost/frameworks"/>
                <property name="javax.percistence.jdbc.user" 
                          value="root"/>
                <property name="javax.percistence.jdbc.password" 
                          value="root"/>
                
                <!--ESPECIFICAÇÃO JPA -->
                <property name="javax.percistence.schema-generation.database.action" 
                          value="drop-and-create"/>
                <property name="javax.persistence.schema-generation.create-source" 
                          value="metadata"/>
                <property name="javax.percistense.sql-load-script-source" 
                          value="META-INF/sql/popular-banco.sql"/>
                
                <!--PROPIEDADES DO HIRBENATE -->
                <property name="hibernate.show_sql" 
                          value="true"/>
                <property name="hibernate.format_sql" 
                          value="true"/>
                <property name="hibernate.dialect" 
                          value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
                  
            </properties>
	</persistence-unit>
</persistence>
